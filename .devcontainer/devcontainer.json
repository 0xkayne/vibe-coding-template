{
  "name": "AI Vibe Workspace",
  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  "features": {
    "ghcr.io/devcontainers/features/node:1": "24.12.1",
    "ghcr.io/devcontainers/features/python:1": "3.12",
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    },
    "ghcr.io/devcontainers/features/postgres:1": "18",
    "ghcr.io/devcontainers/features/redis:1": "8"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-vscode.cpptools",
        "prisma.prisma",
        "tamasfe.even-better-toml",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "github.copilot"
      ]
    }
  },
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && npm install -g pnpm @anthropic-ai/claude-code",
  "remoteUser": "codespace"
}
